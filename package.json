{
  "name": "sam-dynamodb-lambda-boilerplate",
  "description": "sam dynamodb lambda boilerplate",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "aws-sdk": "^2.799.0",
    "dotenv": "^8.2.0",
    "lodash.orderby": "^4.6.0"
  },
  "scripts": {
    "start:dev": "tsc --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:quick": "pretty-quick --staged",
    "build": "tsc",
    "lint": "eslint \"{src}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/jest": "^26.0.20",
    "@types/lodash.orderby": "^4.6.6",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "aws-sdk-mock": "^5.1.0",
    "git-commit-msg-linter": "^3.0.0",
    "jest": "^26.6.3",
    "pre-commit": "^1.2.2",
    "pre-push": "^0.1.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.1.0",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.8.3"
  },
  "pre-commit": "format:quick",
  "pre-push": "test",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
